#!/bin/sh
NAME="$(basename "${0}")"

if [ "$(id -u)" != "0" ] && [ "${NAME}" = "modinfo" ]; then
    TMPDIR=$(mktemp -d)
    ln -s "/snap/core22/current/bin/kmod" "${TMPDIR}/modinfo"
    "${TMPDIR}/modinfo" "$@"
    RET=$?
    rm -Rf "${TMPDIR}"
    exit "${RET}"
fi

if [ "${NAME}" = "lsmod" ]; then
    exec "/snap/core22/current/bin/kmod" "list" "$@"
fi

for i in "/bin/${NAME}" "/sbin/${NAME}" "/usr/bin/${NAME}" "/usr/sbin/${NAME}"; do
    [ ! -e "/var/lib/snapd/hostfs/${i}" ] && continue

    # shellcheck disable=SC2093
    exec nsenter -t 1 -m "${i}" "$@"
done

echo "Unable to find ${NAME}" 1>&2
exit 1
